#include <bits/stdc++.h>
using namespace std;
int main() {
    int n;
    int c=1;
    cout<<"Enter the number of rows:"<<endl;
    cin>>n;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=i;j++){
            cout<<c<<" ";
            if(j==i && i%2==0){
                break;
            }
            else{
                c=!c;
            }
        }
        cout<<endl;
    }
    return 0;
}
