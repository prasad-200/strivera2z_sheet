#include <iostream>
using namespace std;

int main() {
    int n;
    cout<<"Enter the number of rows:"<<endl;
    cin>>n;
    for(int i=1;i<=n;i++){
     for(int j=1;j<=(2*n-1);j++){
         if(j<=n-i){
             cout<<"  ";
         }
         if(j>n-i && j<=(2*n-1)-(n-i)){
             cout<<"* ";
         }
        if(j>(2*n-1)-(n-i)){
           cout<<"  ";
     }
    }
    cout<<endl;
    }
    return 0;
}
